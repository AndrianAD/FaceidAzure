<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD GROUP"
            android:id="@+id/addGroup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85"/>
    <Button
            android:text="ADD PERSON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addPerson"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/addGroup" android:layout_marginEnd="16dp"/>
    <Button
            android:text="TRAIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/train"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/addGroup"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="500dp"

            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/addGroup"/>
    <Button
            android:text="Identify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/indentify"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/addGroup" app:layout_constraintStart_toStartOf="@+id/addGroup"
            android:layout_marginStart="4dp"/>
    <Button
            android:text="Detect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detect" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/indentify"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="getPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getPhoto"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="37dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>